{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
