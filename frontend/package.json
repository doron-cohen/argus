{
  "name": "argus-frontend",
  "version": "1.0.0",
  "description": "Argus Component Catalog Web UI",
  "scripts": {
    "generate:api": "orval --config orval.config.ts",
    "build": "bun run generate:api || echo 'API generation skipped' && bun build src/main.ts --outdir dist --minify --define __ARGUS_API_HOST__=http://localhost:8080 && bun run build:css",
    "build:dev": "bun run generate:api || echo 'API generation skipped' && bun build src/main.ts --outdir dist --define __ARGUS_API_HOST__=http://localhost:8080 && bun run build:css",
    "build:prod": "bun run generate:api || echo 'API generation skipped' && bun build src/main.ts --outdir dist --minify --define __ARGUS_API_HOST__= && bun run build:css",
    "build:css": "mkdir -p dist/ui/tokens/themes && cp src/styles.css dist/ && cp -r src/ui/tokens dist/ui/ && cp src/ui/utilities.css dist/ui/",
    "dev": "bun build src/main.ts --outdir dist --watch",
    "serve": "bun server.js",
    "dev:serve": "VITE_API_HOST=http://localhost:8080 bun server.js",
    "type-check": "tsc --noEmit",
    "test:unit": "bun test tests/unit/ --reporter=spec",
    "test:unit:quiet": "bun test tests/unit/ src/components/ --reporter=minimal",
    "test:unit:pure": "bun test tests/unit/ --reporter=minimal",
    "test:components": "bun test src/components/ --reporter=minimal",
    "test:ui": "web-test-runner",
    "test:ui:watch": "web-test-runner --watch",
    "test:ui:components": "web-test-runner \"src/ui/**/*.test.ts\"",
    "test:ui:watch:components": "web-test-runner \"src/ui/**/*.test.ts\" --watch",
    "test:e2e": "bun playwright test --config=playwright.config.ts",
    "test:e2e:ui": "bun playwright test --config=playwright.config.ts --ui",
    "test:all": "bun run test:unit && bun run test:ui && bun run test:e2e",
    "format": "prettier -w \"src/**/*.{ts,tsx,js,jsx,css,html,json,md}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier -c \"src/**/*.{ts,tsx,js,jsx,css,html,json,md}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
    "analyze": "bun build src/main.ts --outdir dist --analyze"
  },
  "type": "module",
  "devDependencies": {
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.54.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.1.0",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "bun-types": "^1.2.19",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "orval": "^6.31.0",
    "prettier": "^3.3.3",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "20.19.4"
  },
  "dependencies": {
    "@nanostores/lit": "^0.2.3",
    "lit": "^3.1.2",
    "nanostores": "^1.0.1",
    "navigo": "^8.11.1"
  }
}