{
  "name": "argus-frontend",
  "version": "1.0.0",
  "description": "Argus Component Catalog Web UI",
  "scripts": {
    "generate:api": "orval --config orval.config.ts",
    "build": "bun run generate:api && bun run build:css && bun build src/main.ts --outdir dist --minify --define __ARGUS_API_HOST__=http://localhost:8080",
    "build:dev": "bun run generate:api && bun run build:css:dev && bun build src/main.ts --outdir dist --define __ARGUS_API_HOST__=http://localhost:8080",
    "build:prod": "bun run generate:api && bun run build:css && bun build src/main.ts --outdir dist --minify",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:css:dev": "tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "bun build src/main.ts --outdir dist --watch",
    "dev:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
    "serve": "bun server.js",
    "dev:serve": "VITE_API_HOST=http://localhost:8080 bun server.js",
    "type-check": "tsc --noEmit",
    "test:unit": "bun test tests/unit/ src/components/",
    "test:e2e": "bun playwright test --config=playwright.config.ts",
    "test:e2e:ui": "bun playwright test --config=playwright.config.ts --ui",
    "test:all": "bun run test:unit && bun run test:e2e",
    "format": "prettier -w \"src/**/*.{ts,tsx,js,jsx,css,html,json,md}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier -c \"src/**/*.{ts,tsx,js,jsx,css,html,json,md}\" \"tests/**/*.{ts,tsx,js,jsx}\"",
    "analyze": "bun build src/main.ts --outdir dist --analyze"
  },
  "type": "module",
  "devDependencies": {
    "@happy-dom/global-registrator": "^18.0.1",
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "bun-types": "^1.2.19",
    "happy-dom": "^18.0.1",
    "orval": "^6.31.0",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "20.19.4"
  },
  "dependencies": {
    "@nanostores/lit": "^0.2.2",
    "lit": "^3.1.2",
    "nanostores": "^1.0.1",
    "navigo": "^8.11.1"
  }
}