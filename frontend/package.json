{
  "name": "argus-frontend",
  "version": "1.0.0",
  "description": "Argus Component Catalog Web UI",
  "scripts": {
    "build": "bun build src/main.ts --outdir dist",
    "dev": "bun build src/main.ts --outdir dist --watch",
    "serve": "bun server.js",
    "type-check": "tsc --noEmit",
    "test:unit": "bun test tests/unit/*.test.ts",
    "test:e2e": "playwright test --config=playwright.config.ts",
    "test:e2e:ui": "playwright test --config=playwright.config.ts --ui",
    "test:all": "bun run test:unit && bun run test:e2e"
  },
  "type": "module",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/node": "^24.1.0",
    "bun-types": "^1.2.19",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "20.19.4"
  }
}